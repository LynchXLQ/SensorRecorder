                android:layout_weight="1"
                android:text="@string/x_axis"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tv_magnetic_x_result"
